!!! 5
html
	head
		title Cat Cache!
		link(rel="stylesheet", href="/css/reset.css")
		link(rel="stylesheet", href="/css/bootstrap.css")
		link(rel="stylesheet", href="/css/style.css")
		block scripts
			script(src="/js/jquery.js")
			script(src="/socket.io/socket.io.js")
			script(src="/js/common.js")
	body
		.center
			h1(class="font") Cat Cache!
			br
			#slogan
				Slogan
			.input-append
				input(type="text", placeholder="Search for cats!", id="search")
				div(class="btn btn-info", id="submit", onclick="searchForKittens();") Search
			ul(class="links")
				if loggedin == "true"
					li <a href="/account">Account</a> -
					li <a href="/upload">Upload</a> -
					li <a href="/likes">Likes</a> -
					li <a href="/signout">Sign Out</a>
				else
					li <a href="/signup">Sign Up</a> -
					li <a href="/signin">Sign In</a>