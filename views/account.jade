html
	head
		title Cat Cache!
		link(rel="stylesheet", href="/css/reset.css")
		link(rel="stylesheet", href="/css/bootstrap.css")
		link(rel="stylesheet", href="/css/common.css")
		link(rel="stylesheet", href="/css/style.css")
		block scripts
			script(src="/js/jquery.js")
			script(src="/socket.io/socket.io.js")
			script(src="/js/common.js")
			script(src="/js/account.js")
	body
		if loggedin == "false"
			meta(HTTP-EQUIV="REFRESH", content="0; url=/user/signin")
		else
			.wrap
				h2 Account 
				br
				div(class="alert alert-error", id="invalid")
					p Something went wrong with your request
				.form
					.left_hook
						h6 Update Email <span class="tiny">#{email}</span>
					br
					form(action="/user/email", method="post")
						input(type="email", name="email", autocomplete="on", placeholder="Email", class="signinup")
						.left_hook
							input(type="submit", name="submit", class="btn btn-info", value="Update")
					.left_hook
						h6 Update Password
					br
					form(action="/user/password", method="post")
						input(type="password", name="old", placeholder="Old Password", class="signinup")
						input(type="password", name="new", placeholder="New Password", class="signinup")
						.left_hook
							input(type="submit", name="submit", class="btn btn-info", value="Update")
					.left_hook
						h6 Delete Account
						br
						form(action="/user/delete", method="post")
							input(type="checkbox", name="check", id="check")
							span(class="check")  Are you positive?
							br
							input(type="checkbox", name="check", id="check2")
							span(class="check2")  Absolutely sure?
							br
							br
							input(type="submit", name="submit", class="btn btn-danger", value="Delete Account Forever", disabled)
				br
				.center_h
					<a href="/">Home</a> -
					<a href="/upload">Upload</a> -
					<a href="/user/likes">Likes</a> -
					<a href="/user/signout">Sign Out</a>